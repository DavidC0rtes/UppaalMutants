<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
<declaration>const int N = 3;
const int A = 25;
const int B = 50;
typedef int [1, N] id_t;
int id ;
chan cellenter [N + 1], cellexit [N + 1];
</declaration>
<template>
<name>Counter</name>
<location id="id0" x="40" y="80">
<name x="30" y="50">initCount</name>
</location>
<location id="id1" x="190" y="80">
<name x="180" y="50">initial</name>
</location>
<init ref="id1"/>
<transition>
<source ref="id0"/>
<target ref="id0"/>
<label kind="guard" x="-20" y="50">id &gt;= N</label>
<label kind="assignment" x="-20" y="80">id = 1</label>
<nail  x="10" y="50"/>
<nail  x="70" y="50"/>
</transition>
<transition>
<source ref="id0"/>
<target ref="id0"/>
<label kind="guard" x="-20" y="50">id &lt; N</label>
<label kind="assignment" x="-20" y="80">id = id + 1</label>
<nail  x="10" y="50"/>
<nail  x="70" y="50"/>
</transition>
<transition>
<source ref="id1"/>
<target ref="id0"/>
<label kind="guard" x="55" y="50">id == 0</label>
<label kind="assignment" x="55" y="80">id = 1</label>
</transition>
</template>
<template>
<name>Arbiter</name>
<parameter>const id_t i</parameter>
<location id="id2" x="40" y="80">
<name x="30" y="50">S0</name>
</location>
<location id="id3" x="190" y="80">
<name x="180" y="50">S1</name>
</location>
<init ref="id3"/>
<transition>
<source ref="id2"/>
<target ref="id3"/>
<label kind="synchronisation" x="55" y="65">cellexit[i]!</label>
<label kind="assignment" x="55" y="80">id = i</label>
</transition>
<transition>
<source ref="id3"/>
<target ref="id2"/>
<label kind="synchronisation" x="55" y="65">cellenter[i]!</label>
<label kind="guard" x="55" y="50">id == i</label>
<label kind="assignment" x="55" y="80">id = 0</label>
</transition>
</template>
<template>
<name>ProdCell</name>
<parameter>const id_t i</parameter>
<declaration>clock x ;
</declaration>
<location id="id4" x="40" y="80">
<name x="30" y="50">safe</name>
</location>
<location id="id5" x="190" y="80">
<name x="180" y="50">testing2</name>
<label kind="invariant" x="180" y="95">x &lt;= A</label>
</location>
<location id="id6" x="190" y="230">
<name x="180" y="200">error</name>
</location>
<location id="id7" x="40" y="230">
<name x="30" y="200">critical</name>
<label kind="invariant" x="30" y="245">x &lt;= B</label>
</location>
<location id="id8" x="340" y="80">
<name x="330" y="50">requesting</name>
</location>
<location id="id9" x="340" y="230">
<name x="330" y="200">testing</name>
<label kind="invariant" x="330" y="245">x &lt;= A</label>
</location>
<location id="id10" x="340" y="380">
<name x="330" y="350">notready</name>
</location>
<init ref="id10"/>
<transition>
<source ref="id8"/>
<target ref="id9"/>
<label kind="synchronisation" x="0" y="0">cellenter[0]!</label>
</transition>
<transition>
<source ref="id5"/>
<target ref="id4"/>
<label kind="guard" x="55" y="50">x &lt;= A - 1</label>
</transition>
<transition>
<source ref="id5"/>
<target ref="id6"/>
<label kind="guard" x="130" y="125">x &gt;= A</label>
</transition>
<transition>
<source ref="id7"/>
<target ref="id6"/>
<label kind="guard" x="55" y="200">x &gt;= B</label>
</transition>
<transition>
<source ref="id7"/>
<target ref="id5"/>
<label kind="synchronisation" x="55" y="140">cellexit[i]?</label>
<label kind="guard" x="55" y="125">x &lt;= A - 1</label>
<label kind="assignment" x="55" y="155">x = 0</label>
</transition>
<transition>
<source ref="id8"/>
<target ref="id7"/>
<label kind="synchronisation" x="130" y="140">cellenter[i]?</label>
<label kind="assignment" x="130" y="155">x = 0</label>
</transition>
<transition>
<source ref="id9"/>
<target ref="id8"/>
<label kind="guard" x="280" y="125">x &lt;= A - 1</label>
</transition>
<transition>
<source ref="id9"/>
<target ref="id10"/>
<label kind="guard" x="280" y="275">x &gt;= A</label>
<label kind="assignment" x="280" y="305">x = 0</label>
</transition>
<transition>
<source ref="id10"/>
<target ref="id9"/>
<label kind="guard" x="280" y="275">x &lt;= B</label>
<label kind="assignment" x="280" y="305">x = 0</label>
</transition>
</template>
<system>

system Counter, Arbiter, ProdCell;</system>
<queries>
<query>
<formula>E&lt;&gt; ProdCell(1).error</formula>
<comment></comment>
</query>
</queries>
</nta>