<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
<declaration>const int N = 10;
const int LAMDA = 404;
const int SIGMA = 13;
typedef int [0, N - 1] id_t;
int j ;
chan begin , end , busy ;
chan cd [N];
</declaration>
<template>
<name>Bus</name>
<declaration>clock x ;
</declaration>
<location id="id0" x="40" y="80">
<name x="30" y="50">idle</name>
</location>
<location id="id1" x="190" y="80">
<name x="180" y="50">active</name>
</location>
<location id="id2" x="190" y="230">
<name x="180" y="200">collision</name>
<label kind="invariant" x="180" y="245">x &lt; SIGMA</label>
</location>
<location id="id3" x="40" y="230">
<name x="30" y="200">transmit</name>
<urgent/>
</location>
<init ref="id0"/>
<transition>
<source ref="id3"/>
<target ref="id3"/>
<label kind="synchronisation" x="-20" y="215">cd[j]!</label>
<label kind="guard" x="-20" y="200">j &lt; N - 1</label>
<label kind="assignment" x="-20" y="230">x = 0, j = j + 1</label>
<nail  x="10" y="200"/>
<nail  x="70" y="200"/>
</transition>
<transition>
<source ref="id3"/>
<target ref="id0"/>
<label kind="synchronisation" x="-20" y="140">cd[j]!</label>
<label kind="guard" x="-20" y="125">j == N - 1</label>
<label kind="assignment" x="-20" y="155">j = 0, x = 0</label>
</transition>
<transition>
<source ref="id0"/>
<target ref="id1"/>
<label kind="synchronisation" x="55" y="65">begin?</label>
<label kind="assignment" x="55" y="80">x = 0</label>
</transition>
<transition>
<source ref="id1"/>
<target ref="id0"/>
<label kind="synchronisation" x="55" y="65">end?</label>
<label kind="assignment" x="55" y="80">x = 0</label>
</transition>
<transition>
<source ref="id1"/>
<target ref="id1"/>
<label kind="synchronisation" x="130" y="65">busy!</label>
<label kind="guard" x="130" y="50">x &gt;= SIGMA</label>
<nail  x="160" y="50"/>
<nail  x="220" y="50"/>
</transition>
<transition>
<source ref="id1"/>
<target ref="id2"/>
<label kind="synchronisation" x="130" y="140">begin?</label>
<label kind="guard" x="130" y="125">x &lt; SIGMA</label>
<label kind="assignment" x="130" y="155">x = 0</label>
</transition>
<transition>
<source ref="id2"/>
<target ref="id3"/>
<label kind="synchronisation" x="55" y="215">cd[j]!</label>
<label kind="guard" x="55" y="200">x &lt; SIGMA</label>
<label kind="assignment" x="55" y="230">x = 0, j = j + 1</label>
</transition>
</template>
<template>
<name>Station</name>
<parameter>const id_t id</parameter>
<declaration>clock x ;
</declaration>
<location id="id4" x="40" y="80">
<name x="30" y="50">wait</name>
</location>
<location id="id5" x="190" y="80">
<name x="180" y="50">transm</name>
<label kind="invariant" x="180" y="95">x &lt;= LAMDA</label>
</location>
<location id="id6" x="190" y="230">
<name x="180" y="200">retry</name>
<label kind="invariant" x="180" y="245">x &lt;= 2 * SIGMA</label>
</location>
<init ref="id4"/>
<transition>
<source ref="id6"/>
<target ref="id4"/>
<label kind="synchronisation" x="0" y="0">begin!</label>
</transition>
<transition>
<source ref="id4"/>
<target ref="id5"/>
<label kind="synchronisation" x="55" y="65">begin!</label>
<label kind="assignment" x="55" y="80">x = 0</label>
</transition>
<transition>
<source ref="id4"/>
<target ref="id4"/>
<label kind="synchronisation" x="-20" y="65">cd[id]?</label>
<label kind="assignment" x="-20" y="80">x = 0</label>
<nail  x="8" y="51"/>
<nail  x="70" y="50"/>
</transition>
<transition>
<source ref="id4"/>
<target ref="id6"/>
<label kind="synchronisation" x="55" y="140">cd[id]?</label>
<label kind="assignment" x="55" y="155">x = 0</label>
</transition>
<transition>
<source ref="id4"/>
<target ref="id6"/>
<label kind="synchronisation" x="55" y="140">busy?</label>
<label kind="assignment" x="55" y="155">x = 0</label>
</transition>
<transition>
<source ref="id5"/>
<target ref="id4"/>
<label kind="synchronisation" x="55" y="65">end!</label>
<label kind="guard" x="55" y="50">x &gt;= LAMDA</label>
<label kind="assignment" x="55" y="80">x = 0</label>
</transition>
<transition>
<source ref="id5"/>
<target ref="id6"/>
<label kind="synchronisation" x="130" y="140">cd[id]?</label>
<label kind="guard" x="130" y="125">x &lt;= 2 * SIGMA</label>
<label kind="assignment" x="130" y="155">x = 0</label>
</transition>
<transition>
<source ref="id6"/>
<target ref="id5"/>
<label kind="synchronisation" x="130" y="140">begin!</label>
<label kind="guard" x="130" y="125">x &lt;= 2 * SIGMA</label>
<label kind="assignment" x="130" y="155">x = 0</label>
</transition>
<transition>
<source ref="id6"/>
<target ref="id6"/>
<label kind="synchronisation" x="130" y="215">cd[id]?</label>
<label kind="guard" x="130" y="200">x &lt;= 2 * SIGMA</label>
<label kind="assignment" x="130" y="230">x = 0</label>
<nail  x="160" y="200"/>
<nail  x="220" y="200"/>
</transition>
</template>
<system>

system Bus, Station;</system>
<queries>
<query>
<formula>A[] not (Station(0).transm &amp;&amp; Station(1).transm &amp;&amp; Station(0).x&gt;2*SIGMA)</formula>
<comment></comment>
</query>
</queries>
</nta>