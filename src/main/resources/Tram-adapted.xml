		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id7"/>
			<label kind="synchronisation" x="-365" y="-170">endOpenAction?</label>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-60" y="17">openAction!</label>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id5"/>
